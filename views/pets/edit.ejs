<%- include("../partials/header") %>

<form action="/pets/<%= pet.id %>/?_method=PUT" method="POST">
    <label>Image: <input type="text" name="image" ></label><br>
    <label>Name: <input type="text" name="name" value="<%= pet.name %>" ></label><br>
    <label>Type: <input type="text" name="type" value="<%=pet.type%>" ></label><br>
    <label>Breed: <input type="text" name="breed" value="<%=pet.breed%>"></label><br>
    <label>Age: <input type="number" name="age" value="<%=pet.age%>"></label><br>
    <label>Birthday: <input type="date" name="birthday" value="<%=pet.birthday%>"></label><br>
    <button type="submit">Edit Pet</button>
</form>

<%- include("../partials/footer") %>